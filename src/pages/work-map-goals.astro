---
import FullWidthLayout from "../layouts/FullWidthLayout.astro";
import WorkMapTable from "../components/WorkMap/WorkMapTable";
import { WorkMapTabs } from "../components/WorkMap/WorkMapTabs";
---

<FullWidthLayout
  title="Goals | Work Map | Operately BPRD"
  showBreadcrumbs={false}
  transitionBackground={true}
>
  <div class="w-full flex flex-col overflow-hidden">
    <header
      class="flex items-center justify-between px-6 py-4 border-b border-surface-outline bg-white rounded-t-lg shadow-sm"
    >
      <h1 class="text-2xl font-bold text-content-accent">Company view</h1>
      <div class="flex items-center space-x-4">
        <button
          class="px-4 py-2 bg-accent-1 text-white-1 rounded-md hover:bg-accent-1-light transition-colors"
        >
          New Goal
        </button>
        <button
          class="px-4 py-2 border border-surface-outline text-content-base rounded-md hover:bg-surface-dimmed transition-colors"
        >
          New Project
        </button>
      </div>
    </header>

    <div class="flex-1 overflow-auto bg-white rounded-b-lg shadow-sm">
      <WorkMapTabs client:load activeTab="goals" />
      <WorkMapTable client:load filter="goals" />
    </div>
  </div>
</FullWidthLayout>
