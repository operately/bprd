---
import Layout from "../layouts/Layout.astro";
import WorkMapTable from "../components/WorkMap/WorkMapTable";
---

<Layout title="Work Map | Operately">
  <main class="w-full h-dvh flex flex-col bg-surface-base">
    <div class="w-full h-full flex flex-col overflow-hidden">
      <header
        class="flex items-center justify-between px-6 py-4 border-b border-surface-outline"
      >
        <h1 class="text-2xl font-bold text-content-accent">Work Map</h1>
        <div class="flex items-center space-x-4">
          <button
            class="px-4 py-2 bg-accent-1 text-white-1 rounded-md hover:bg-accent-1-light transition-colors"
          >
            New Goal
          </button>
          <button
            class="px-4 py-2 border border-surface-outline text-content-base rounded-md hover:bg-surface-dimmed transition-colors"
          >
            New Project
          </button>
        </div>
      </header>

      <div class="flex-1 overflow-auto">
        <WorkMapTable client:load />
      </div>
    </div>
  </main>
</Layout>
